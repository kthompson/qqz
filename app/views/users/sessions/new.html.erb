<div class="container">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>

  <h2 class="form-signin-heading">Please sign in</h2>
    <%= f.text_field :email, required: false, autofocus: true, placeholder: "Email address", class: "input-block-level" %>
    <%= f.password_field :password, required: false, placeholder: "Password", class: "input-block-level" %>
    <% if devise_mapping.rememberable? %>
    <label class="checkbox">
    <%= f.check_box :remember_me, :as => :boolean %> Remember me
  	</label>
  	<% end %>
    <%= f.button :submit, "Sign in", class: "btn btn-large btn-primary" %>
<% end %>

<%= render "users/shared/links" %>
   </div>